<?xml version="1.0"   encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
http://www.springframework.org/schema/beans ">
    <bean id="actor1" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorname" value="tejaswini"/>
        <constructor-arg name="actorgender" value="female"/>
        <constructor-arg name="actorage" value="21"></constructor-arg>
    </bean>
    <bean id="actor2" class="com.stackroute.domain.Actor">
        <constructor-arg name="actorname" value="ramu"/>
        <constructor-arg name="actorgender" value="male"/>
        <constructor-arg name="actorage" value="29"></constructor-arg>
    </bean>
    <bean id="movie" class="com.stackroute.domain.Movie" scope="prototype">
        <constructor-arg name="actor" ref="actor1"></constructor-arg>
    </bean>
    <bean name="movie1,movie2" class="com.stackroute.domain.Movie">
        <constructor-arg name="actor" ref="actor2"></constructor-arg>
    </bean>

</beans>